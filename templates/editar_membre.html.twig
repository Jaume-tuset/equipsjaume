{% extends 'base.html.twig' %}
    {% block title %}
        Formulario Editar Membre
    {% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('assets/css/estilsEquipFormMembre.css') }}">
    {% endblock %}
     {% block javascripts %}
        {{ parent() }}
    {% endblock %}
    {% block body %}
        {% if error %}
            <div class="exception">{{error}}</div>
        {% endif %}
        <h1 id="titolInici">Editar Membre</h1>
        <div id="paragrafInici">
            {{ form_start(formulari) }}
            {{ form_widget(formulari) }}
            {{ form_end(formulari) }}
        </div>
        <div id="paragrafEquip">
            <img src="{{ asset('/assets/img/membres/'~imatge) }}" alt="" class="imatgeEquip">
        </div>
        <p id="inicio">
            <img src=" {{ asset('assets/img/casa.png') }}  " alt="">
            <a href=" {{ path('inici') }} ">Torna a l'inici</a>
        </p>
    {% endblock %}