{% extends 'base.html.twig' %}
    {% block title %}
        Formulario Editar Equipo
    {% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('assets/css/estilsEquipForm.css') }}">
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
    {% block body %}
        <h1 id="titolInici">Editar Equip</h1>
        <div id="paragrafInici">
            {% if error %}
                <div class="exception">{{error}}</div>
            {% endif %}
            {{ form_start(formulari) }}
            {{ form_widget(formulari) }}
            {{ form_end(formulari) }}
        </div>
        <div id="paragrafImatge">Imatge Actual <br> <img class="imatgeEquip" src="{{ asset(imatge)}}"/></div>
        <p id="inicio">
            <img src=" {{ asset('assets/img/casa.png') }}  " alt="">
            <a href=" {{ path('inici') }} ">Torna a l'inici</a>
        </p>
    {% endblock %}