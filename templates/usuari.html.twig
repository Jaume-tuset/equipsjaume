{% extends 'base.html.twig' %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="{{ asset('css/user.css') }}" rel="stylesheet" />
    {% endblock %}
    {% block title %}Usuaris {% endblock %}
    {% block body %}
        <div class="paragrafInici">
             <h1 class="titolInici">Usuaris Projecte Equips 2n DAW</h1>
            <br>
            <h2 class="titolSecundari">Llista d'usuaris</h2>
            <table id="tabla">
                <th>id</th>
                <th>username</th>
                <th>password</th>
                <th>roles</th>
                <th>editar</th>
                <th>eliminar</th>
                {% for usuari in usuaris %}
                    <tr>
                        <td>{{usuari.id}}</td>
                        <td>{{usuari.username}}</td>
                        <td>{{usuari.password}}</td>
                        <td>{{usuari.roles[0]}}</td>
                        <td><a href="{{  path('editar_usuari', {'codi': usuari.id}) }}"><img style="width: 30px; heigth: 30px;" src="{{ asset('img/lapiz.jpeg') }}" /></a></td>
                        <td><a href="{{  path('eliminar_usuari', {'codi': usuari.id}) }}"><img style="width: 30px; heigth: 30px;" src="{{ asset('img/basura.jpeg') }}" /></a></td>
                    </tr>
                {% endfor %}
    
            </table>
        </div>
        <br><br><br><br>
    
    {% endblock %}