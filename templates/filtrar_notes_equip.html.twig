{% extends 'base.html.twig' %}
{% block title %}
    Equips
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/assets/css/estilsFiltrar.css') }}">
{% endblock %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {% if equips %}
        <div class="caja1">
            <p id="paragrafInici">Inici programa gestió d'equips i membres del proyecte 2n DAW 
            <br> IES LLuís Simarro <br> Curs 22/23 <br>
            <img class="imatgeInici" src=" {{ asset('assets/img/manosUnidas.jpeg') }} " /></p>
        </div>
        <div class="titolLlista">
        <h3>Llistat d'Equips</h3>
    </div>
    <div class="llistaEquips">
        {% for equipos in equips %}
            <li>
                <a href="{{ path('dades_equips') }}/{{equipos.getId}}">    
                    {{ equipos.getNom }}(nota:{{equipos.getNota}})
                </a>
            </li>
        {% endfor %}
    </div>
    {% else %}
        <div class="caja1">
            <p id="paragrafInici">Inici programa gestió d'equips i membres del proyecte 2n DAW 
            <br> IES LLuís Simarro <br> Curs 22/23 <br>
            <img class="imatgeInici" src=" {{ asset('assets/img/manosUnidas.jpeg') }} " /></p>
        </div>
        <div class="titolLlista">
        <h3>Llistat d'Equips</h3>
    </div>
    <div class="llistaEquips">
        <h3>No s'han trobat equips</h3>
    </div>
    {% endif %}
{% endblock %}